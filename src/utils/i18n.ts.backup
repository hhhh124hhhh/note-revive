// 获取当前语言设置
function getCurrentLanguage(): 'zh' | 'en' {
  const stored = localStorage.getItem('language') as 'zh' | 'en';
  return stored || 'zh';
}

// 翻译函数
export function t(key: keyof Translations, params?: Record<string, string | number>): string {
  const lang = getCurrentLanguage();
  const translation = translations[lang][key];

  if (!translation) {
    console.warn(`Translation missing for key: ${key} in language: ${lang}`);
    return key;
  }

  // 替换参数
  if (params) {
    return Object.entries(params).reduce(
      (str, [param, value]) => str.replace(new RegExp(`{${param}}`, 'g'), String(value)),
      translation
    );
  }

  return translation;
}

// 获取所有翻译
export function getAllTranslations(): Translations {
  const lang = getCurrentLanguage();
  return translations[lang];
}

// 设置语言
export function setLanguage(lang: 'zh' | 'en'): void {
  localStorage.setItem('language', lang);
  document.documentElement.setAttribute('lang', lang);
  // 触发语言变更事件
  window.dispatchEvent(new CustomEvent('languagechange', { detail: lang }));
}